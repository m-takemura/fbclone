<div class="container">
  <div class="wrapper col-sm-6 col-sm-offset-3 ">
    <%= form_for([@topic,@comment]) do |f| %>
      <%= f.error_messages! %>
      <%= f.text_field :content, class:"form-control" %>
      <br>
      <%= f.submit "投稿する", class:'btn btn-default btn-sm btn-primary pull-right' %>
    <% end %>

    <%= form_for(@comment, url: topics_path, method: 'get') do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る",  class: 'btn btn-default btn-sm btn-success pull-left', name: '' %>
    <% end %>

  </div>
</div>
