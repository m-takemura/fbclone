<div class="container">
  <div class="wrapper col-sm-6 col-sm-offset-3 ">
    <%= form_for(@topic) do |f| %>
      <%= f.error_messages! %>
      <%= topic_img(@topic) if topic_img(@topic) %>
      <%= f.file_field :picture %>
      <%= f.hidden_field :picture_cache %>
      <%= f.text_area :content, class:"form-control" %>
      <br>
      <%= f.submit "投稿する", class:'btn btn-default btn-sm btn-primary pull-right' %>
    <% end %>

    <%= form_for(@topic, url: topics_path, method: 'get') do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る",  class: 'btn btn-default btn-sm btn-success pull-left', name: choose_new_or_edit %>
    <% end %>

  </div>
</div>
