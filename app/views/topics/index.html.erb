<div class="topics">
  <div class="container">
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-9">
      <p class="flash"><%= notice %><%= alert %></p>
        <!-- <div class="timeline"> -->
          <div class="row post-block">
            <%= form_for(@topic) do |f| %>
              <%= f.file_field :picture %>
              <%= f.hidden_field :picture_cache %>
              <%= f.text_area :content, class:"form-control", placeholder:"今なにしてる？" %>
              <br>
              <%= f.submit "投稿する", class:"btn btn-default btn-sm btn-primary pull-right"%>
            <% end %>
          </div>

          <% @topics.each do |topic| %>
            <div class="row tweet-block">
              <div class="blog-author">
                <%= profile_img(topic.user) %>
                <%= topic.user.name %><br>
                <%= topic.created_at %>
              </div>

              <div class="blog-picture">
                <%= topic_img(topic)if topic_img(topic) %>
              </div>

              <div class="blog-content">
                <p><%= simple_format(topic.content) %></p>
                <% if topic.user_id=current_user.id %>
                  <div class="right">
                      <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success pull-right' %>
                      <%= link_to '削除', topic_path(topic.id), method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-default btn-sm btn-danger pull-right' %>
                  </div>
                <% end %>
              </div>

            </div>
          <% end %>
        <!-- </div> -->
    </div>
  </div>
</div>
