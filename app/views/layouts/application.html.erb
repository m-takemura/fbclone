<!DOCTYPE html>
<html>
  <head>
    <title>Fbclone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!--<%= link_to "Achieve", root_path, class: "navbar-brand" %>-->
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" >
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Fbclone",topics_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "マイページ",edit_user_registration_path %></li>
            <li><%= link_to 'ユーザー一覧', users_path if user_signed_in? %></li>
            <li><%= link_to '友達一覧', users_path if user_signed_in? %></li>
            <li><%= link_to "メッセージ", conversations_path %></li>
            <li><%= link_to "ログアウト",destroy_user_session_path, method: :delete %></li>
          <% end %>
        </ul>
      </div>
      </div>
    </nav>

    <%= yield %>
